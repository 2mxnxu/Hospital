<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Hospital.doctor.model.mapper.DoctorMapper">

    <!-- INSERT -->
    <insert id="save" parameterType="Hospital.doctor.model.dto.DoctorDto">
        INSERT INTO doctor (name, specialty, phone)
        VALUES (#{name}, #{specialty}, #{phone})
    </insert>

    <!-- UPDATE -->
    <update id="update" parameterType="Hospital.doctor.model.dto.DoctorDto">
        UPDATE doctor
        SET name = #{name},
        specialty = #{specialty},
        phone = #{phone}
        WHERE doctorid = #{doctorid}
    </update>

    <!-- DELETE -->
    <delete id="delete" parameterType="int">
        DELETE FROM doctor
        WHERE doctorid = #{doctorid}
    </delete>

    <!-- SELECT by ID -->
    <select id="findById" resultType="Hospital.doctor.model.dto.DoctorDto" parameterType="int">
        SELECT * FROM doctor
        WHERE doctorid = #{doctorid}
    </select>

    <!-- SELECT all -->
    <select id="findAll" resultType="Hospital.doctor.model.dto.DoctorDto">
        SELECT * FROM doctor;
    </select>



</mapper>
