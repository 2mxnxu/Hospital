<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Hospital.patient.model.mapper.PatientMapper">

    <select id="findAll" resultType="Hospital.patient.model.dto.PatientDto">
        SELECT * FROM patient;
    </select>
    <select id="findById" resultType="Hospital.patient.model.dto.PatientDto" parameterType="int">
        SELECT * FROM patient
        WHERE patientid = #{patientid}
    </select>
    <insert id="save" parameterType="Hospital.patient.model.dto.PatientDto">
        INSERT INTO patient (name, birthdate, phone, address )
        VALUES (#{name}, #{birthdate}, #{phone}, #{address}  )
    </insert>

    <update id="update" parameterType="Hospital.patient.model.dto.PatientDto">
        UPDATE patient
        SET name = #{name},
        birthdate = #{birthdate},
        phone = #{phone}
        address = #{address}
        WHERE patientid = #{patientid}
    </update>

    <!-- DELETE -->
    <delete id="delete" parameterType="int">
        DELETE FROM patient
        WHERE patientid = #{patientid}
    </delete>

</mapper>